<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#c4ccd4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Display Name here"
        />

    <TextView
        android:id="@+id/product_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Display Product here"
        />


    <TextView
        android:id="@+id/quantity_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Display Quantity here"
        />



    <TextView
        android:id="@+id/price_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Display Price Here"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/phnumber_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PHONE  :"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/phnumber_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Display Phone Number"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/call"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="CLICK HERE TO CALL" />
    </LinearLayout>



</LinearLayout>